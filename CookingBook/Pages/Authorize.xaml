<Page x:Class="CookingBook.Pages.Authorize"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CookingBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorize">

    <Grid Height="469">
        <TextBox x:Name="TextLogin" HorizontalAlignment="Center" Margin="0,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224" Height="20" TextChanged="TextBox_TextChanged" Background="#FFF3E7D2" BorderBrush="#FFE0D2BB" SelectionBrush="#FFEBC26F"/>
        <PasswordBox x:Name="TextPassword" HorizontalAlignment="Center" Margin="0,156,0,0" VerticalAlignment="Top" Width="224" Height="20" Background="#FFF3E7D2" BorderBrush="#FFE0D2BB" SelectionBrush="#FFEBC26F"/>
        <TextBlock x:Name="Password" HorizontalAlignment="Left" Margin="288,128,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Foreground="Black" FontSize="20" FontFamily="Times New Roman"/>
        <TextBlock x:Name="Login" HorizontalAlignment="Left" Margin="288,70,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Foreground="Black" FontSize="20" FontFamily="Times New Roman"/>
        <Button x:Name="ButtonAuth" Content="Sing in" HorizontalAlignment="Center" VerticalAlignment="Top" Width="224" Click="Button_Click" Foreground="Black" Height="30" Margin="0,204,0,0" FontFamily="Times New Roman" FontSize="20" Background="#FFF3E7D2" BorderBrush="#FFDCCCB2"/>

    </Grid>
</Page>
