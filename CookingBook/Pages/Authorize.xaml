<Page x:Class="CookingBook.Pages.Authorize"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CookingBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorize">

    <Grid>
        <TextBox x:Name="TextLogin" HorizontalAlignment="Center" Margin="0,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224" Height="20" TextChanged="TextBox_TextChanged"/>
        <PasswordBox x:Name="TextPassword" HorizontalAlignment="Center" Margin="0,134,0,0" VerticalAlignment="Top" Width="224" Height="20"/>
        <TextBlock x:Name="Password" HorizontalAlignment="Left" Margin="288,113,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Foreground="#FF37577B" FontSize="14" FontFamily="Arial"/>
        <TextBlock x:Name="Login" HorizontalAlignment="Left" Margin="288,56,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Foreground="#FF37577B" FontSize="14"/>
        <Button x:Name="ButtonAuth" Content="Вход" HorizontalAlignment="Center" VerticalAlignment="Top" Width="224" Click="Button_Click" Foreground="#FF37577B" Height="30" Margin="0,183,0,0"/>

    </Grid>
</Page>
